<%= erb :head, :locals => {title: "アトラス [Atllas] : カテゴリー - "+cat_ja} %>

<div class="main-620">
  <% if @urls %>
  <div class="section">
	<% @urls.each do |url| %>
		<% if url.title %>
			<div class="entry <%= cat_en %>">
			  <h1><a href="<%= url.url %>" target="_blank"><%= url.title %></a></h1>
			  <p><%= url.body[0,100] if url.body %>...</p>
			</div>
		<% end %>
	<% end %>
  </div>
  <% end %>
</div> <!-- .span6 -->

<div class="side-336">
	 	<div class="side-ad">
		  <script type="text/javascript"><!--
		  google_ad_client = "ca-pub-1794767457980402";
