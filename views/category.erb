<%= erb :head, :locals => {title: "アトラス [Atllas] : カテゴリー - "+cat_ja} %>

<div class="span7">
  <% if @urls %>
  <div class="section">
	<span class="section-title">人気ニュース</span>
	<% @urls.each do |url| %>
	<% if url.title %>
	<div class="entry <%= cat_en %>">
	  <h1><a href="<%= url.url %>" target="_blank"><%= url.title %></a></h1>
	  <p><%= url.body[0,100] if url.body %>...</p>
	  <span class="pull-right"><a href="/page/<%= url.id %>">Permalink</a></span>
	  <span><a href="https://twitter.com/share?url=<%= url.url %>" target="_blank">ツイートする</a></span>
	</div>
	<% end %>
	<% end %>
  </div>
  <% end %>
</div> <!-- .span6 -->

<div class="span4 offset1">
  <% rpoint = rand(1..10) %>
  <% if @recents %>
  <div class="section">
	<span class="section-title">最新ニュース</span>
	<% @recents.each_with_index do |url, i| %>
	  <% if url.title %>
	    <div class="entry <%= cat_en %>">
 		  <h2><a href="<%= url.url %>" target="_blank"><%= url.title %></a></h2>
		</div>
	  <% end %>
	  <% if i == rpoint %>
	    <%= erb :ad300 %>
	  <% end %>
	<% end %>
  </div> <!-- .section -->
  <% end %>
</div> <!-- .span4 -->	  	

<%= erb :foot %>
