<!DOCTYPE html>
<html lang="ja">
<head>
	<title>アトラス [Atllas] ネットで話題の最新ニュース</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet/less" type="text/css" href="less/bootstrap.less" />
	<link rel="stylesheet/less" type="text/css" href="less/responsive.less" />
	<link rel="stylesheet/less" type="text/css" href="style.less" />
	<script src="less-1.3.3.min.js" type="text/javascript"></script>
</head>
<body data-spy="scroll" data-target=".navbar">
  	<div class="container">
		<%= erb :navbar %>

		<div class="row">
			<div class="top ad hidden-phone">
				<script type="text/javascript"><!--
				google_ad_client = "ca-pub-1794767457980402";
				/* Top */
				google_ad_slot = "3560880893";
				google_ad_width = 728;
				google_ad_height = 90;
				//-->
				</script>
				<script type="text/javascript"
				src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
				</script>
			</div>

			<div class="span6">
				<% if @urls %>
					<div id="popular" class="section">
						<span class="section-title">人気ニュース</span>
						<% @urls.sort_by{|u|
							if u.count_recent_hatena
								u.count_recent_hatena + u.counted_twitter
							else
								# hatebuの上限はだいたい300-400くらいと想定して、その上限くらいのURLは100くらいとして扱う
								# 一方12時間ではtwitterの方は60くらいが上限なのでそんな感じ
								u.counted_twitter + u.count_all_hatena/4
							end
							}.reverse.each do |url| %>
							<% if url.title %>
								<div class="entry <%= url.category.downcase %>">
									<h1><a href="<%= url.url %>"><%= url.title %></a> <a href="/page/<%= url.id %>"><i class="icon-info-sign icon-white" style="background-color:#aaaaaa;"></i></a></h1>
									<p><%= url.body[0,100] if url.body %>...</p>
									<!-- <span>T:<%= url.counted_twitter %></span>
									<span>HR:<%= url.count_recent_hatena if url.count_recent_hatena %></span>
									<span>HA:<%= url.count_all_hatena %></span> -->
								</div>
							<% end %>
						<% end %>
					</div>
				<% end %>
			</div> <!-- .span6 -->
	
			<div class="span4">
				<div id="recents" class="section">
					<span class="section-title">最新ニュース</span>
					<% rpoint = rand(1..10) %>
					<% @recents.each_with_index do |url, i| %>
						<% if url.title %>
							<div class="entry <%= url.category.downcase %>">
								<h2><a href="<%= url.url %>"><%= url.title %></a> <a href="/page/<%= url.id %>"><i class="icon-info-sign icon-white" style="background-color:#aaaaaa;"></i></a></h2>
							</div>
						<% end %>
						<% if i == rpoint %>
						    <div style="width:300px;height:250px;background-color:#eeeeee;">
						    <script type="text/javascript"><!--
															  google_ad_client = "ca-pub-1794767457980402";
															  /* recent area */
															  google_ad_slot = "6409942495";
															  google_ad_width = 300;
															  google_ad_height = 250;
															  //-->
							  </script>
							<script type="text/javascript"
									src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
							  </script>
							</div>
						<% end %>
					<% end %>
				</div>
		  	</div> <!-- .span3 -->

			<div class="span2">
			    <!-- <div id="apps" class="section"> -->
				<!-- 	<span class="section-title">話題のアプリ</span> -->
				<!-- 	<% @app.each do |ap| %> -->
				<!-- 		<p><a href="<%= ap.url %>"><%= ap.title %></a></p> -->
				<!-- 		<hr> -->
				<!-- 	<% end %> -->
				<!-- </div> -->

				<div id="products" class="section">
					<span class="section-title">話題の商品</span>
					<% @market.each do |prd| %>
						<% if prd.image_url %>
							<img src="<%= prd.image_url %>" />
						<% end %>
						<p><a href="<%= prd.url %>"><%= prd.title %></a></p>
						<hr>
					<% end %>
				</div>

				<div id="videos" class="section">
					<span class="section-title">話題の動画</span>
					<% @video.each do |vd| %>
						<% if /v=(.+?)$/ =~ vd.url %>
							<% vid = $1 %>
							<a href="<%= vd.url %>"><img src="http://img.youtube.com/vi/<%= vid %>/0.jpg" /></a>
						<% end %>
						<p><a href="<%= vd.url %>"><%= vd.title %></a></p>
						<hr>
					<% end %>
				</div>
		  	</div> <!-- .span2 -->		  	
		</div>
  	</div>
 	<script src="http://code.jquery.com/jquery.js"></script>
 	<script src="js/bootstrap.min.js"></script>
 	<script type="text/javascript">
 	  var _gaq = _gaq || [];
 	  _gaq.push(['_setAccount', 'UA-39905342-1']);
 	  _gaq.push(['_trackPageview']);
 	  (function() {
 	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
 	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
 	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
 	  })();
 	</script>
</body>
</html>
